<h1>Les Restaurants</h1>

<%= link_to "Add a new Restaurant", new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>

  <p><%= "*" * restaurant.stars %></p>
  <%= link_to "Aller voir", restaurant_path(restaurant) %>
   <%= link_to "Delete", restaurant_path(restaurant) %>
<% end %>
